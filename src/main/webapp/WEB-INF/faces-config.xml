<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>airportBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.AirportBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>passengerBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.PassengerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>flightBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.FlightBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>welcomeTravel.xhtml</display-name>
		<from-view-id>/welcomeTravel.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createPassenger</from-outcome>
			<to-view-id>/createPassenger.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		<navigation-rule>
		<display-name>createPassenger.xhtml</display-name>
		<from-view-id>/createPassenger.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{PassengerBean.createPassenger}</from-outcome>
			<to-view-id>/showCreatePassengerResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		<navigation-rule>
			<display-name>showCreatePassengerResult.xhtml</display-name>
			<from-view-id>/showCreatePassengerResult.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>welcomeTravel</from-outcome>
				<to-view-id>/welcomeTravel.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>welcomeTravel.xhtml</display-name>
			<from-view-id>/welcomeTravel.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>createDepartureAirport</from-outcome>
				<to-view-id>/createDepartureAirport.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>createDepartureAirport.xhtml</display-name>
			<from-view-id>/createDepartureAirport.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>#{AirportBean.createDepartureAirport}</from-outcome>
				<to-view-id>/showCreateAirportResult.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>welcomeTravel.xhtml</display-name>
			<from-view-id>/welcomeTravel.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>createArrivalAirport</from-outcome>
				<to-view-id>/createArrivalAirport.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>createArrivalAirport.xhtml</display-name>
			<from-view-id>/createArrivalAirport.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>#{AirportBean.createArrivalAirport}</from-outcome>
				<to-view-id>/showCreateAirportResult.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>welcomeTravel.xhtml</display-name>
			<from-view-id>/welcomeTravel.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>createFlight</from-outcome>
				<to-view-id>/createFlight.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>createFlight.xhtml</display-name>
			<from-view-id>/createFlight.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>#{FlightBean.createFlight}</from-outcome>
				<to-view-id>/showCreateFlightResult.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>showCreateAirportResult.xhtml</display-name>
			<from-view-id>/showCreateAirportResult.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>welcomeTravel</from-outcome>
				<to-view-id>/welcomeTravel.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>showCreateFlightResult.xhtml</display-name>
			<from-view-id>/showCreateFlightResult.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>welcomeTravel</from-outcome>
				<to-view-id>/welcomeTravel.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>createFlight.xhtml</display-name>
			<from-view-id>/createFlight.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>createFlight</from-outcome>
				<to-view-id>/dateError.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>dateError.xhtml</display-name>
			<from-view-id>/dateError.xhtml</from-view-id>
			<navigation-case>
				<to-view-id>/welcomeTravel.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>bookFlight.xhtml</display-name>
			<from-view-id>/bookFlight.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>#{FlightBean.flightSelection}</from-outcome>
				<to-view-id>/dateError.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>welcomeTravel.xhtml</display-name>
			<from-view-id>/welcomeTravel.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>bookFlight</from-outcome>
				<to-view-id>/bookFlight.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>bookFlight.xhtml</display-name>
			<from-view-id>/bookFlight.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>#{FlightBean.flightSelection}</from-outcome>
				<to-view-id>/bookFlightSelectFlight.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>bookFlightSelectFlight.xhtml</display-name>
			<from-view-id>/bookFlightSelectFlight.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>#{FlightBean.passengerSelection}</from-outcome>
				<to-view-id>/flightBooked.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>welcomeTravel.xhtml</display-name>
			<from-view-id>/welcomeTravel.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>departureAirports</from-outcome>
				<to-view-id>/departureAirports.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>departureAirports.xhtml</display-name>
			<from-view-id>/departureAirports.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>welcomeTravel</from-outcome>
				<to-view-id>/welcomeTravel.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>welcomeTravel.xhtml</display-name>
			<from-view-id>/welcomeTravel.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>arrivalAirports</from-outcome>
				<to-view-id>/arrivalAirports.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>
		<navigation-rule>
			<display-name>arrivalAirports.xhtml</display-name>
			<from-view-id>/arrivalAirports.xhtml</from-view-id>
			<navigation-case>
				<from-outcome>welcomeTravel</from-outcome>
				<to-view-id>/welcomeTravel.xhtml</to-view-id>
			</navigation-case>
		</navigation-rule>

</faces-config>
